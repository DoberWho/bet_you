<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BtnAction" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/success</item>
    </style>
    <style name="BtnSecondary" parent="BtnAction">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>
    <style name="BtnLink" parent="BtnAction">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="BtnMenu" parent="BtnAction">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@color/primaryDarkColor</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
    </style>
</resources>